<!DOCTYPE html>
<html>

<head>
  <title>SCAM - Page d'accueil</title>
  <%- include('header'); %>
    <style>
      .cent {
        padding-top: 10px;
      }
    </style>
</head>

<body class="is-preload">
  <!-- Wrapper -->
  <div id="wrapper">
    <%- include('navbar'); %>
      <!-- Main -->
      <div id="main">
        <div class="inner">
          <header>
            <h1>Choisir la Société de Crédit d'Assurance Méritocratique, c'est faire le choix du bon sens.<br /> </h1>
          </header>
          <!-- Body -->

          <div class="container text-center">
            <div class="row align-items-start">
              <div class="col">
                <br>
                <form action=/front/subscribe method="post">
                  <div class="mb-3 row">
                    <label for="username" class="col-sm-2 col-form-label cent">Nom</label>
                    <div class="col-sm-9">
                      <input type="text" name="name" class="form-control-plaintext" id="name"
                        placeholder="Jean Dupont"></input>
                    </div>
                  </div>
                  <div class="mb-3 row">
                    <label for="username" class="col-sm-2 col-form-label cent">Tel</label>
                    <div class="col-sm-9">
                      <input type="tel" name="phone" placeholder="0123456789" id="phone"
                        class="form-control-plaintext"></input>
                    </div>
                  </div>
                  <div class="mb-3 row">
                    <label for="username" class="col-sm-2 col-form-label cent">Adresse</label>
                    <div class="col-sm-9">
                      <input type="text" name="address" placeholder="12 rue Thomas Mann 75013 Paris" id="address"
                        class="form-control-plaintext"></input>
                    </div>
                  </div>

                  <div class="mb-3 row">
                    <label for="username" class="col-sm-2 col-form-label cent">Email</label>
                    <div class="col-sm-9">
                      <input type="email" name="email" class="form-control-plaintext" placeholder="exemple@exemple.fr"
                        id="email"></input>
                    </div>
                  </div>

                  <input type="submit" value="Obtenir un devis"></input>
                </form>

                <% if( error_cred ) {%>

                  <link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet">

                  <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                    <symbol id="check-circle-fill" viewBox="0 0 16 16">
                      <path
                        d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z">
                      </path>
                    </symbol>
                    <symbol id="info-fill" viewBox="0 0 16 16">
                      <path
                        d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z">
                      </path>
                    </symbol>
                    <symbol id="exclamation-triangle-fill" viewBox="0 0 16 16">
                      <path
                        d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z">
                      </path>
                    </symbol>
                  </svg>

                  <div class="alert alert-danger d-flex align-items-center" role="alert" id="alert">
                    <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Danger:">
                      <use xlink:href="#exclamation-triangle-fill"></use>
                    </svg>
                    <div id="error_message">
                      <strong>Erreur: </strong>
                      <% error_msg.forEach(function(message) { %>
                        <%= message %>
                          <% }); %>

                    </div>
                  </div>


                  <%}%>

              </div>
            </div>
          </div>

          <hr>
          <header>
            <h1>Nos services :</h1>
          </header>

          <section class="tiles">
            <article class="style1">
              <span class="image">
                <img src="images/assurance_auto.png" class="img-thumbnail" alt="" />
              </span>
              <a href="#">
                <h2>Assurance auto</h2>
              </a>
            </article>
            <article class="style2">
              <span class="image">
                <img src="images/assurance_habit.png" class="img-thumbnail" alt="" />
              </span>
              <a href="#">
                <h2>Assurance Habitation</h2>
              </a>
            </article>
            <article class="style3">
              <span class="image">
                <img src="images/assurance_maladie.png" class="img-thumbnail" alt="" />
              </span>
              <a href="#">
                <h2>Assurance Maladie</h2>
              </a>
            </article>
            <article class="style4">
              <span class="image">
                <img src="images/assurance_scolaire.png" class="img-thumbnail" alt="" />
              </span>
              <a href="#">
                <h2>Assurance scolaire</h2>
              </a>
            </article>
            <article class="style5">
              <span class="image">
                <img src="images/assurance_association.png" class="img-thumbnail" alt="" />
              </span>
              <a href="#">
                <h2>Assurance association</h2>
              </a>
            </article>
            <article class="style6">
              <span class="image">
                <img src="images/assurance_moto.png" class="img-thumbnail" alt="" />
              </span>
              <a href="#">
                <h2>Assurance moto</h2>
              </a>
            </article>
          </section>
          <br>
        </div>
      </div>
  </div>
  <script>
    var alertdiv = document.getElementById('alert');
    if (alertdiv != null) {
      alertdiv.addEventListener('click', event => {
        alertdiv.remove();
      });
    }
  </script>
  <%- include('script'); %>
</body>

</html>